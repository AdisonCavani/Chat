<local:BaseDialogUserControl x:Class="Chat.DialogMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat"
             xmlns:core="clr-namespace:Chat.Core;assembly=Chat.Core"
             mc:Ignorable="d" >

    <StackPanel Background="{StaticResource ForegroundLightBrush}" 
                d:DataContext="{x:Static core:MessageBoxDialogDesignViewModel.Instance}">

        <TextBlock Padding="5"
                   Text="{Binding Message}"
                   Foreground="{StaticResource ForegroundVeryDarkBrush}"/>

        <Button IsCancel="True"
                IsDefault="True"
                Content="{Binding OkText}"
                HorizontalAlignment="Center"
                Style="{StaticResource RegularButton}"
                FontSize="{StaticResource FontSizeRegular}"
                Command="{Binding CloseCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:BaseDialogUserControl}}}"/>
    </StackPanel>
</local:BaseDialogUserControl>
