<dialogs:BaseDialogUserControl
    x:Class="Chat.Dialogs.DialogMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:Chat.Controls.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:design="clr-namespace:Chat.ViewModels.Dialogs.Design"
    mc:Ignorable="d">
    <StackPanel
        d:DataContext="{x:Static design:MessageBoxDialogDesignModel.Instance}"
        Background="{StaticResource ForegroundLightBrush}">
        <TextBlock
            Padding="5"
            Foreground="{StaticResource ForegroundVeryDarkBrush}"
            Text="{Binding Message}" />

        <Button
            HorizontalAlignment="Center"
            Command="{Binding CloseCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type dialogs:BaseDialogUserControl}}}"
            Content="{Binding OkText}"
            FontSize="{StaticResource FontSizeRegular}"
            IsCancel="True"
            IsDefault="True" />

    </StackPanel>
</dialogs:BaseDialogUserControl>
